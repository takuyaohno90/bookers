<h1 class="edit-title">Editing Book</h1>
<% if @book.errors.any? %>
<div class="index-error">
   <h2 class="index-error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>

   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
</div>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
<h4 class="errors">Title</h4>
<% else %>
<h4 class="edit-margin">Title</h4>
<% end %>
<%= f.text_field :title %>

<% if @book.errors.any? %>
<h4 class="errors">Body</h4>
<% else %>
<h4 class="edit-margin">Body</h4>
<% end %>
<%= f.text_area :body %>

<div class="submit">
<%= f.submit "Update Book" %>
</div>

<% end %>

<%= link_to "Show", book_path(@book.id), class:"link" %>|<%= link_to "Back", books_path , class:"link"%>
